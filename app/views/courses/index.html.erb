<h3>Course Planning</h3>


<%= form_tag(courses_path, method: :get, class: "form-horizontal") do %>
	<div class="form-group">
  		<div class="col-md-8 col-xs-8 col-md-offset-1">
	    	<%= search_field :course, :code, class: 'form-control', placeholder: 'Search for Courses ...', autocomplete: "off" %>
	    </div>
	    <div class="form-group">
	    	<div class="col-xs-1">
	      		<%= submit_tag "Search", name: nil, class: 'btn btn-primary' %>
	    	</div>
	  	</div>
  	</div>
<% end %>
