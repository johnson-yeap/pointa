<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <h1>Sign Up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>

      <!--  username -->
      <div class="form-group">
        <%= f.label :username, for: :username, class: 'col-xs-3 control-label' %>
        <div class="col-xs-9">
          <%= f.text_field :username, autofocus: true, class: 'form-control' %>
        </div>
      </div>

      <!-- email -->
      <div class="form-group">
        <%= f.label :email, for: :email, class: 'col-xs-3 control-label' %>
        <div class="col-xs-9">
          <%= f.email_field :email, class: 'forrm-control' %>
        </div>
      </div>  

      <!-- password -->
      <div class="form-group">
        <%= f.label :password, for: :password, class: 'col-xs-3 control-label' %>
        <div class="col-xs-9">
          <%= f.password_field :password, autocomplete: "off",  class: 'form-control' %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>

      <!-- password confirmation -->
      <div class="form-group">
        <%= f.label :password_confirmation, for: :password_confirmation, class: 'col-xs-3 control-label' %>
        <div class="col-xs-9">
          <%= f.password_field :password_confirmation, autocomplete: "off",  class: 'form-control' %>
        </div>
      </div>

      <!-- student details -->
      <%= f.fields_for :student do |student| %>

        <!-- name -->
        <div class="form-group">
          <%= student.label :name, for: :name, class: 'col-xs-3 control-label' %>
          <div class="col-xs-9">
            <%= student.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <!-- matric number -->
        <div class="form-group">
          <%= student.label :matric_no, for: :matric_no, class: 'col-xs-3 control-label' %>
          <div class="col-xs-9">
            <%= student.text_field :matric_no, class: 'form-control' %>
          </div>
        </div>

        <!-- department -->
        <div class="form-group">
          <%= student.label :department_id, for: :department_id, class: 'col-xs-3 control-label' %>
          <div class="col-xs-9">
            <%= student.text_field :department_id, class: 'form-control' %>
          </div>
        </div>

      <% end %>

      <div class="form-group">
        <div class="col-xs-9 col-xs-offset-3">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
      </div>

    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
