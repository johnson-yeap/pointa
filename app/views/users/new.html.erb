<h1>Sign Up</h1>

<%= form_for @user do |f| %>

<table>
    <tr>
        <td><%= f.label :username %></td>
        <td><%= f.text_field :username %></td>
    </tr>
    <tr>
        <td><%= f.label :email %></td>
        <td><%= f.text_field :email %></td>
    </tr>
    <tr>
        <td><%= f.label :password %></td>
        <td><%= f.text_field :password %></td>
    </tr>
    <tr>
        <td><%= f.label :password_confirmation %></td>
        <td><%= f.text_field :password_confirmation %></td>
    </tr>



    <!-- student details -->
    <%= f.fields_for :student do |student| %>
        <tr>
            <td><%= student.label :name %></td>
            <td><%= student.text_field :name %></td>
        </tr>
        <tr>
            <td><%= student.label :matric_no %></td>
            <td><%= student.text_field :matric_no %></td>
        </tr>
        <tr>
            <td><%= student.label :department_id %></td>
            <td><%= student.text_field :department_id %></td>
        </tr>
    <% end %>



    <tr>
        <td></td>
        <td><%= f.submit "Sign Up" %></td>
    </tr>
</table>

<% end %>


<%= @user.inspect %>
<br>
<%= @user.student.inspect %>   